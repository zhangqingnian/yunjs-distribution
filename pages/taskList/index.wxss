/* pages/taskList/index.wxss */
page{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%;
    min-height: 100%;
    background: #F5F5F5;
    color: #323232;
}

.imgwarp{
    width: 100%;
    height: 300rpx;
    position: relative;
}

.imgwarp image{
    width: 100%;
    height: 300rpx;
}

.imgwarp .status{
    position: absolute;
    top: 20rpx;
    left: 0;
    width: 140rpx;
    height: 50rpx;
    background:rgba(99,224,140,.5);
    color: #FAFBFB;
    font-size: 32rpx;
    line-height: 50rpx;
    text-align: right;
    box-sizing: border-box;
    padding-right: 10rpx;
    border-radius:0px 10rpx 10rpx 0px;
}

.info{
    background: #fff;
    /* margin-top:30rpx; */
    padding: 20rpx 30rpx;
}
.top,.leftwarp{
    align-items: center;
    justify-content: space-between;
}
.info .venueName{
    font-size: 32rpx;
    font-weight: bold;
}

.info .distance{
    font-size: 28rpx;
    margin-left: 40rpx;
}

.info .btn{
    font-size: 30rpx;
    color: #fff;
    background: #63AFE0;
    width:140rpx;
    height:50rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 20rpx;
}

.info .active{
    background: #bbb;
}
.info_bottom{
    align-items: center;
    justify-content: space-between;
    margin-top: 30rpx;
}
.info_title{
    font-size: 24rpx
}

.share{
    width: 32rpx;
    height: 32rpx;
}

.list{
    padding: 0 30rpx;
    margin-top: 30rpx;
    flex-flow: wrap;
}

.item{
    width: 330rpx;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
}
.item:nth-child(2n){
    margin-right: 0;
}
.itemImg{
    width: 330rpx;
    height: 220rpx;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}
.itemImg image{
    width: 330rpx;
    height: 220rpx;
    background: silver;
}

.itemBottom{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    box-sizing: border-box;
    padding: 0 10rpx;
    font-size: 22rpx;
    color: #fff;
    justify-content: space-between;
    align-items: center;
    background:rgba(99,224,140,.5);
}

.news{
    font-size: 20rpx;
}

.news > view{
    margin-top: 10rpx;
}

.box{
    justify-content: space-between;
    align-items: center;
}

.price{
    color: #DA0808;
}

.cardName{
    font-size: 22rpx;
}




.mask{
    background: rgba(0,0,0,.3);
    position: fixed;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    font-size: 30rpx;
    color: #969696
}

.mask .box{
    position: absolute;
    top:calc(50% - 280rpx);
    left:calc(50% - 250rpx);
    background: #f8f8f8;
    width: 500rpx;
    border-radius: 5px;
}

.mask .box .top{
    height: 220rpx;
    border-bottom: 1px solid #eaeaea;
    box-sizing: border-box; 
}
.mask .box .title{
    color: #4a4a4a;
    text-align: center;
    line-height: 80rpx;
}

.mask .box .tip{
    font-size: 24rpx;
    text-align: center;
}

.mask .box .couponInput{
    width: 400rpx;
    background: #fff;
    height: 65rpx;
    margin: 10rpx auto;
    border-radius: 5px;
    border: 1px solid #eaeaea;
    padding-left: 10rpx;
    font-size:26rpx;

}
.mask .box .bottom{
    height: 80rpx;
}
.mask .box .bottom view{
    flex: 1;
    text-align: center;
    line-height: 80rpx;
    box-sizing: border-box; 
}

.mask .box .bottom view{
    border-right: 1px solid #eaeaea;
}
.mask .box .bottom view:last-child{
    border-right: none;
    color: #1aad16;
}