/* pages/venueCourse/index.wxss */

.bannerimg{
    width: 100%;
    height: 300rpx;
}



.mtop30 {
    margin-top: 30rpx;
}

.containner {
    background: #f5f5f5;
    font-size: 28rpx;
    color: #323232;
    padding-bottom: 100rpx;
}

.cardWarp {
    position: relative;
    width: 690rpx;
    height: 300rpx;
    margin: 0 auto;
    font-size: 36rpx;
    color: #fff;
    overflow: hidden;
}

.cardWarp image {
    width: 690rpx;
    height: 300rpx;
    border-radius: 20rpx;
}
.del{
    margin-left:10rpx;
    text-decoration:line-through;

}
.coupon{
    position: absolute;
    right: 0;
    top:20rpx;
    width:120rpx;
    height:40rpx;
    background:rgba(218,8,8,.5);
    border-radius:10rpx 0rpx 0rpx 10rpx;
    color: #fff;
    font-size: 22rpx;
    line-height: 40rpx;
    text-align: center;
}

.recom{
    position: absolute;
    left: 10rpx;
    top:10rpx;
    width:70rpx;
    height:70rpx;
    border-radius: 50%;
}
.cardWarp .cardWarptitle {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    background:rgba(137,221,106,.5);
    color: #fff;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    border-radius: 0 0rpx 20rpx 20rpx;
}



.itemClass {
    background: #fff;
    padding: 25rpx 30rpx;
}

.titleWarp {
    padding-bottom: 25rpx;
    justify-content: space-between;
    border-bottom: 1px solid #dcdcdc;
    font-size: 32rpx;
}

.category .title {
    font-family: PingFang-SC-Bold;
    font-weight: bold;
}

.category .type {
    color: #63afe0;
}

.content {
    padding-top: 20rpx;
}

.category .item {
    line-height: 42rpx;
}

.price {
    color: #da0808;
}

.hasAddress {
    justify-content: space-between;
}

.go {
    align-items: center;
    color: #63afe0;
}

.go image {
    width: 20rpx;
    height: 30rpx;
    margin-left: 20rpx;
}

.scroll-view_H {
    width: 100%;
    white-space: nowrap;
}

.scroll-view_H .flex_column{
    display: inline-block;
    width: 140rpx;
    margin-right: 20rpx;
}

.scroll-view_H .types {
    width: 140rpx;
    height: 50rpx;
    border: 1px solid #63afe0;
    color: #63afe0;
    font-size: 28rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 10rpx;
}

.scroll-view_H .surplus {
    width: 140rpx;
    font-size: 22rpx;
    text-align: center;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: #969696;
    margin-top: 15rpx;
    margin-bottom: 5rpx;
}

.scroll-view_H .flex_column.on .types {
    background: #63afe0;
    color: #fff;
}

.scroll-view_H .flex_column.on .surplus {
    color: #63afe0;
}

.selectClass .details view{
    line-height: 42rpx;
}

.baoming{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background: rgba(99, 224, 140, 1);
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
}

.bottomwarp{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    
}

.news {
    font-size: 24rpx;
    color: #63AFE0;
    align-items: center;
    justify-content: center;
    flex-basis: 200rpx;
    background: #fff;
}
.news image{
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 5rpx;
}

.confirm{
    width: 100%;
    background: #63E08C;
    color: #fff;
    line-height: 100rpx;
    text-align: center;
    font-size: 36rpx;
}


.info{
    background: #fff;
    padding: 20rpx 30rpx;
    margin-top: 30rpx;
}
.top,.leftwarp{
    align-items: center;
    justify-content: space-between;
}
.info .venueName{
    font-size: 32rpx;
    font-weight: bold;
}

.info .distance{
    font-size: 28rpx;
    margin-left: 40rpx;
}

.info .btn{
    font-size: 30rpx;
    color: #DA0808;
}
.info_bottom{
    align-items: center;
    justify-content: space-between;
    margin-top: 30rpx;
}
.info_title{
    font-size: 24rpx
}

.share{
    width: 32rpx;
    height: 32rpx;
}

.mask{
    background: rgba(0,0,0,.3);
    position: fixed;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    font-size: 30rpx;
    color: #969696
}

.mask .box{
    position: absolute;
    top:calc(50% - 280rpx);
    left:calc(50% - 250rpx);
    background: #f8f8f8;
    width: 500rpx;
    border-radius: 5px;
}

.mask .box .top{
    height: 220rpx;
    border-bottom: 1px solid #eaeaea;
    box-sizing: border-box; 
}
.mask .box .title{
    color: #4a4a4a;
    text-align: center;
    line-height: 80rpx;
}

.mask .box .tip{
    font-size: 24rpx;
    text-align: center;
}

.mask .box .couponInput{
    width: 400rpx;
    background: #fff;
    height: 65rpx;
    margin: 10rpx auto;
    border-radius: 5px;
    border: 1px solid #eaeaea;
    padding-left: 10rpx;
    font-size:26rpx;

}
.mask .box .bottom{
    height: 80rpx;
}
.mask .box .bottom view{
    flex: 1;
    text-align: center;
    line-height: 80rpx;
    box-sizing: border-box; 
}

.mask .box .bottom view{
    border-right: 1px solid #eaeaea;
}
.mask .box .bottom view:last-child{
    border-right: none;
    color: #1aad16;
}