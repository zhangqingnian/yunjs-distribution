/* pages/my/task/index.wxss */
page{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%; min-height: 100%;
    background: #F5F5F5;
    box-sizing: border-box;
    padding-top: 100rpx;
}

.nav{
    position: fixed;
    top:0;
    width: 100%;
    height: 100rpx;
    background: #fff;
    z-index:999;
}
.nav view{
    text-align: center;
    font-size: 32rpx;
    height: 100rpx;
    line-height: 100rpx;
    box-sizing: border-box;
    flex: 1;
}

.nav view.on{
    color: #63AFE0;
    border-bottom: 1px solid #63AFE0;
}

.item{
    background: #fff;
    box-sizing: border-box;
    padding: 0 30rpx;
    margin-bottom: 30rpx;
}
.item-top{
    padding: 30rpx 0rpx;
    border-bottom: 1rpx solid #DCDCDC;
}
.item-bottom{
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0rpx;
}
.left{
    width:250rpx;
    height:150rpx;
    border-radius:10rpx;
    overflow: hidden;
    position: relative;
}

.fileimg{
    width:250rpx;
    height:150rpx;
    background: #ddd;
}

.bottomTitle{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    background:rgba(99,224,140,.5);
    font-size: 22rpx;
    color: #fff;
    justify-content: space-between;
    padding: 0 10rpx;
    box-sizing: border-box;
}

.right{
    margin-left: 30rpx;
    color: #323232;
    font-size: 24rpx;
    width: calc(100% - 280rpx);
    justify-content: space-between;
    height: 150rpx;
}

.top, .bottom{
    justify-content: space-between;
    align-items: center;
}
.venueName{
    font-size: 32rpx;
}

.share{
    width: 32rpx;
    height: 32rpx;
}
.bottom{
    font-weight: 500;
}


.chatBtn{
    position: fixed;
    right: 30rpx;
    bottom: 80rpx;
}

.btn{
    color:#fff;
    width:140rpx;
    height:50rpx;
    background:rgba(99,175,224,1);
    border-radius:20rpx;
    text-align:center;
    line-height:50rpx;
    margin-left:30rpx;

}