/* pages/card/shop/index.wxss */
/* text-decoration: line-through; */
page{
    width: 100%;
    height: 100%;
}
.contain{
    color: #323232;
    width: 100%;
    min-height: 100%;
    background: #f5f5f5;
    box-sizing: border-box;
    padding-top: 100rpx;
}

.nav{
    position: fixed;
    top:0;
    width: 100%;
    height: 100rpx;
    background: #fff;
    justify-content: space-around;
    z-index:999;
}
.nav view{
    text-align: center;
    font-size: 32rpx;
    height: 100rpx;
    line-height: 100rpx;
    box-sizing: border-box;
}

.nav view.on{
    color: #63AFE0;
    border-bottom: 1px solid #63AFE0;
}

.item{
    margin-bottom: 20rpx;
    padding: 0 30rpx;
    background: #fff;
}
.itemTop{
    padding: 15rpx 0;
    border-bottom: 1px solid #DCDCDC;
}
.itemTop .imgWarp{
    position: relative;
    width:250rpx;
    height:150rpx;
    border-radius:10rpx;
    overflow: hidden;
}

.itemTop .img{
    width:250rpx;
    height:150rpx;
}

.imgBottom{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 60rpx;
    background:rgba(137,221,106,.5);
    border-radius:0px 0px 20rpx 20rpx;
    font-size: 28rpx;
    color: #fff;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 20rpx;
}
.oldPrice{
    margin-left: 10rpx;
    text-decoration: line-through;
}

.coupon{
    position: absolute;
    right: 0;
    top:10rpx;
    width:120rpx;
    height:40rpx;
    background:rgba(218,8,8,.5);
    border-radius:10rpx 0rpx 0rpx 10rpx;
    color: #fff;
    font-size: 22rpx;
    line-height: 40rpx;
    text-align: center;
}

.recom{
    position: absolute;
    left: 0rpx;
    top:0rpx;
    width:70rpx;
    height:70rpx;
}

.itemTop .right{
    font-size: 24rpx;
    width: calc(100% - 280rpx);
    height: 150rpx;
    margin-left: 30rpx;
    justify-content: space-between
}







.itemBottom{
    background: #fff;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 0;
}

.itemBottomTop{
    justify-content: space-between;
    border-bottom: 1px solid #959595;
}

.cardName{
    font-size: 32rpx;
}

.venueName{
    margin: 15rpx 0;
}
.revise{
    font-size: 24rpx;
    color: #fff;
    width:140rpx;
    height:50rpx;
    background:rgba(99,175,224,1);
    border-radius:20rpx;
    text-align: center;
    line-height: 50rpx;
}

.price{
    color: #DA0808;
}

.th{
    justify-content: space-between;
}

.icon{
    width: 32rpx;
    height: 32rpx;
    margin-right: 20rpx;
}