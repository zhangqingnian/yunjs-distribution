/* pages/card/shop/reviseGoods/index.wxss */
page{
    width: 100%;
    height: 100%;
}
.contain{
    color: #323232;
    width: 100%;
    min-height: 100%;
    background: #f5f5f5;
    box-sizing: border-box;
    padding-bottom: 100rpx;
}

.itemTop{
    padding: 30rpx;
}
.itemTop .imgWarp{
    position: relative;
    width:690rpx;
    height:300rpx;
    border-radius:20rpx;
    overflow: hidden;
}

.itemTop .img{
    width:690rpx;
    height:300rpx;
    background: #63AFE0;
}

.imgBottom{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 60rpx;
    background:rgba(137,221,106,.5);
    border-radius:0px 0px 20rpx 20rpx;
    font-size: 28rpx;
    color: #fff;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 20rpx;
}
.oldPrice{
    margin-left: 30rpx;
    text-decoration: line-through;
}

.coupon{
    position: absolute;
    left: 0;
    top:20rpx;
    width:120rpx;
    height:40rpx;
    background:rgba(218,8,8,.5);
    border-radius:0px 10rpx 10rpx 0px;
    color: #fff;
    font-size: 22rpx;
    line-height: 40rpx;
    text-align: center;
}

.recom{
    position: absolute;
    left: 10rpx;
    top:10rpx;
    width:70rpx;
    height:70rpx;
}

.itemBottom{
    background: #fff;
    padding: 30rpx;
    font-size: 28rpx;
}

.itemBottomTop{
    justify-content: space-between;
    border-bottom: 1px solid #959595;
}

.cardName{
    font-size: 30rpx;
    font-weight: bold;
}

.venueName{
    margin: 15rpx 0;
}
.revise{
    font-size: 24rpx;
    color: #fff;
    width:140rpx;
    height:50rpx;
    background:rgba(99,175,224,1);
    border-radius:20rpx;
    text-align: center;
    line-height: 50rpx;
}

.price{
    color: #DA0808;
}

.itemBottom .oldPrice{
    color: #969696;
    font-size: 24rpx;
}

.switch{
    width: 60rpx;
    height: 30rpx;
    margin-left: 30rpx;
}

input{
    width:550rpx;

}

.itemBottom .flex_row{
    margin: 15rpx 0;
}

.borderBottom{
    border-bottom: 1px solid #DCDCDC;
}

.keep{
    position: absolute;
    width: 100%;
    height: 100rpx;
    bottom: 0;
    background: #63E08C;
    font-size: 36rpx;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
}