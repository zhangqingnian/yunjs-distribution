/* pages/card/reviseCard/index.wxss */
page{
    width: 100%;
    height: 100%;
}
.containner{
    width: 100%;
    min-height: 100%;
    background: #F5F5F5;
    color: #323232;
}
.warp{
    
    width: 690rpx;
    margin: 0 auto;
    margin-top: 30rpx;
    position: relative;
    border-radius: 30rpx;
    overflow: hidden;
}

.cardimg{
    display: block;
    width: 690rpx;
    height: 308rpx;
    background: pink;
}
.cardWarp {
    width: 690rpx;
    border-radius: 30rpx;
    box-sizing: border-box;
    padding: 30rpx;
    overflow: hidden;
    position: absolute;
    left: 0;
    top: 0;
}
.cardWarp .top{
    justify-content: space-between;
    align-items: center;
}

.cardWarp .user{
    align-items: center;
}

.avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: salmon
}

.nickName{
    font-size: 32rpx;
    margin-left: 20rpx;
}

.revise{
    font-size: 24rpx;
    color: #fff;
    width:140rpx;
    height:50rpx;
    background:rgba(99,175,224,1);
    border-radius:20rpx;
    text-align: center;
    line-height: 50rpx;
}

.cardWarp .bottom{
    margin-left: 120rpx;
}

.cardWarp .bottom .icon{
    width: 32rpx;
    height: 32rpx;
}

.cardWarp .bottom .bottomItem{
    margin-bottom: 15rpx;
}
.cardWarp .bottom .bottomItem:last-child{
    margin-bottom: 0rpx;
}

.cardWarp .bottom .val{
    font-size: 30rpx;
    margin-left: 20rpx;
}
