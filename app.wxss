/**app.wxss**/


view, text{
    font-family:PingFang-SC-Medium;
}
.flex_row{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.flex_column{
    display: flex;
    flex-direction: column;
}

page{
    width: 100%;
    height: 100%;
}
.white{
    color: #ffffff;
}
.red{
    color: #DA0808;
}

.blue{
    color: #63AFE0;
}
.fontSize48{
    font-size: 48rpx;
}
.fontSize24{
    font-size: 24rpx;
}
.fontSize20{
    font-size: 20rpx;
}
.fontSize28{
    font-size: 28rpx;
}
.font19{
    font-size: 19rpx;
}
.font30{
    font-size: 30rpx;
}
.between{
    justify-content: space-between;
}
.containner{
    width: 100%;
    min-height: 100%;
    background: #F5F5F5;
    color: #323232;
    font-size: 30rpx;
    box-sizing: border-box;
}

.submit{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background: #63E08C;
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}

.share-warp{
    display: inline-block;
    position: relative;
}
.share-img{
    width:100rpx;
    height:32rpx;
}

.share-btn{
    padding: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    opacity: 0;
}