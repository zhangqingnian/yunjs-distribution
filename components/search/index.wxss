/* components/search/index.wxss */
/* components/search/search-cmp.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  padding-top: 100rpx;
  background: #f5f5f5;
}



.search-container {
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50px;
  margin-left: 20rpx;
  /* margin-left: */
}


.cancel-img {
  width: 14px;
  height: 14px;
  margin-right: 10px;
}

.icon {
  width: 14px;
  height: 14px;
  margin-left: 12px;
  margin-right: 8px;
}

.in-bar {
  color: #999;
}

.cancel {
  line-height: 34px;
  width: 60px;
  /* margin-left:10px; */
  text-align: center;
  display: inline-block;
  border: none;
  font-size: 16px;
}

.header {
  background-color: #ffffff;
  position:fixed;top:0;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  width: 750rpx;
  align-items: center;
  z-index:99;
  box-sizing: border-box;
}

.bar {
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  display: inline-block;
  height: 34px;
  /* width:100%; */
  width: 500rpx;
  font-size: 14px;
}


.flex_row{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.flex_column{
    display: flex;
    flex-direction: column;
}



.item{
    background: #fff;
    box-sizing: border-box;
    padding: 30rpx;
    margin: 15rpx 0;
}

.left{
    width:250rpx;
    height:150rpx;
    border-radius:10rpx;
    overflow: hidden;
    position: relative;
}

.fileimg{
    width:250rpx;
    height:150rpx;
    background: #ddd;
}

.bottomTitle{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    background:rgba(99,224,140,.5);
    font-size: 22rpx;
    color: #fff;
    justify-content: space-between;
    padding: 0 10rpx;
    box-sizing: border-box;
}

.right{
    margin-left: 30rpx;
    color: #323232;
    font-size: 24rpx;
    width: calc(100% - 280rpx);
    justify-content: space-between;
    height: 150rpx;
}

.top, .bottom{
    justify-content: space-between;
    align-items: center;
}
.venueName{
    font-size: 32rpx;
}

.bottom{
    font-weight: 500;
}


.chatBtn{
    position: fixed;
    right: 30rpx;
    bottom: 80rpx;
}